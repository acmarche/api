{% extends '@AcMarcheApi/base.html.twig' %}

{% block body %}

    <div class="card mb-3">
        <div class="card-header">
            <h2>{{ user }}</h2>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-primary" type="submit"><i class="ti ti-device-floppy"></i> Sauvegarder</button>
            {{ form_end(form) }}
        </div>
        <div class="card-footer">
            <a href="{{ path('api_user_show',{'id': user.id}) }}"><i
                        class="ti ti-arrow-left"></i> Annuler</a>
        </div>
    </div>

{% endblock %}
