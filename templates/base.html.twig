<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Api{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('bundles/acmarcheapi/favicon.ico') }}"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@latest/tabler-icons.min.css" />
    {% block stylesheets %}
        {{ ux_controller_link_tags() }}
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
   </head>
<body>
<nav class="navbar navbar-expand-md navbar-light bg-light fixed-top border-bottom shadow-sm">
    {% block brand %}
        <i class="fas fa-store icon-rose"></i> <a class="navbar-brand" href="{{ path('api_home') }}">Api</a>
    {% endblock %}
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault"
            aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-md-center" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto ml-auto">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                {% block menu_top %}
                    {% include '@AcMarcheApi/_menu.html.twig' %}
                {% endblock %}
            {% endif %}
        </ul>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="{{ path('app_logout') }}" class="nav-link" title="DÃ©connexion"><i
                                class="fas fa-sign-out-alt"></i></a>
                </li>
            </ul>
        {% else %}
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="{{ path('app_login') }}" class="nav-link" title="Connexion"><i
                                class="fas fa-sign-in-alt"></i></a>
                </li>
            </ul>
        {% endif %}
    </div>
</nav>


<main role="main" {% block main_class %}class="container pt-3"{% endblock %}>

    {% include '@AcMarcheApi/_flash_messages.html.twig' %}

    {% block notifications %}

    {% endblock %}

    {% block body %}

    {% endblock %}
</main>

{% block footer %}
    <footer class="mb-5 d-print-none">

    </footer>
{% endblock %}

</body>
</html>
